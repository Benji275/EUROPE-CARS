// Initialize the map
var map = L.map('map').setView([51.505, 10], 4); // Centered in Europe

// Load map tiles from OpenStreetMap
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
  maxZoom: 18,
}).addTo(map);

